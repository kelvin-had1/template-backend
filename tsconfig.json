{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": ["es6"],                                        
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "outDir": "./dist",                                   
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                                  
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "removeComments": true,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@shared/*": ["./src/shared/*"]      
    }                           
  }
}
